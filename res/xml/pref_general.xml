    <CheckBoxPreference android:key="swipe_only_while_playing" android:title="@string/pref_title_swipe_only_while_playing" android:defaultValue="false" android:summary="@string/pref_description_swipe_only_while_playing"/><CheckBoxPreference android:summary="@string/disable_samsung_updates_description" android:key="disable_samsung_music_updates" android:title="@string/disable_samsung_updates_title"/>
    <EditTextPreference android:key="longpress_timeout" android:title="@string/dialog_longpress_title" android:defaultValue="500" android:dialogMessage="@string/dialog_longpress_message" android:positiveButtonText="@string/action_save" android:dialogTitle="@string/dialog_longpress_title" android:negativeButtonText="@string/action_cancel" android:inputType="number"/>
    
